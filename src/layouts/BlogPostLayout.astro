---
import { formatDate } from "../lib/formatDate";
import Layout from "./Layout.astro";
import { Icon } from "astro-icon/components";

const { frontmatter } = Astro.props;
---

<Layout>
	<div class="flex gap-4 flex-col container max-w-xl mx-auto p-4">
		<div class="flex">
			<a href="/" class="flex items-center gap-1 font-bold text-gray-600">
				<Icon name="fa:arrow-left" class="w-4"/>
				Home
			</a>
		</div>
		<div class="flex flex-col gap-2">
			<div class="flex items-center justify-between">
				<h1 class="text-2xl">{frontmatter.title}</h1>
				<span class="text-gray-600">{formatDate(frontmatter.publishDate)}</span>
			</div>
			<slot />
		</div>
	</div>
</Layout>